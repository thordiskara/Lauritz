---
import Layout from "../layouts/Layout.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import PrimaryBtnBig from "../components/PrimaryBtnBig.astro"
import SecondaryBtnBig from "../components/SecondaryBtnBig.astro"
import PrimaryBtnSmall from "../components/PrimaryBtnSmall.astro"
import SecondaryBtnSmall from "../components/SecondaryBtnSmall.astro"
import Carousel from "../components/Carousel.astro"
import Gridcard from "../components/Gridcard.astro"
import Singlecard  from "../components/Singlecard.astro"
import ListCard  from "../components/ListCard.astro"
---

<Layout>
    <Header/>
    <section class="light">
        <h4 class="title">Headings</h4>
        <h1>Display Heading</h1>
        <h2>Heading 2</h2>
        <h3>Heading 3</h3>
        <h4>Heading 4</h4>
        <h5>Heading 5</h5>
        <h6>Heading 6</h6>
    </section>

    <section class="dark">
        <h4 class="title">Text</h4>
        <div class="bodyText pad">
            <p>Body</p>
            <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Doloremque impedit mollitia harum esse facere, magnam quod, maiores quas eligendi id quidem cum laborum magni alias assumenda ab est cumque qui.</p>
        </div>

        <div class="smallBody pad">
            <p>Small body</p>
            <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Doloremque impedit mollitia harum esse facere, magnam quod, maiores quas eligendi id quidem cum laborum magni alias assumenda ab est cumque qui.</p>
        </div>

        <div class="buttonText pad">
            <p>Button</p>
        </div>

        <div class="overline pad">
            <p>Overline</p>
        </div>
    </section>

    <section >
        <h4 class="title bottom">Buttons</h4>
        <div class="buttonsLayout">
            <PrimaryBtnBig/>
        </div>
        <div class="buttonsLayout">
            <SecondaryBtnBig/>
        </div>
        <div class="buttonsLayout">
            <PrimaryBtnSmall/>
        </div>
        <div class="buttonsLayout">
            <SecondaryBtnSmall/>
        </div>
    </section>

    <section class="dark">
        <h4 class="title bottom">Carousel Card</h4>
        <Carousel></Carousel>
    </section>
    
    <section class="light">
        <div class="cardslayout">
            <div>
                <h4 class="title bottom">Grid Card</h4>
                <Gridcard />
            </div>
            <div>
                <h4 class="title bottom">List Card</h4>
                <ListCard />
            </div>
        </div>
    </section>
<section class="dark">
    <h4 class="title bottom">Single Product Card</h4>
    <Singlecard/>
</section>

</Layout>

<style>
    .buttonsLayout{
    padding-top: 1rem;
    padding-bottom: 1rem;
}

    .cardslayout{
    display: grid;
    grid-template-columns: 1fr 3fr;
    gap: 5rem;
    }

    section{
        padding: 4rem 4rem;
        border-bottom: solid black 1px;
    }

    .title{
        text-decoration: underline;
    }

    .pad{
        padding-top: 1rem;
    }

    .bottom{
        padding-bottom: 1rem;
    }
</style>