<style>

.single-view-card {
        margin: 10px;
        width:423px;
        border: solid black 1px;
        padding: 28px 32px 28px 32px;
    
    }
    .auction-end {
        color: var(--auction-end-text);
    }
   
    .small-button{
        padding: 5px 19px;
        
    }
    .current-bid {
        display: flex;
    }
    .place-holder {
        color: var(--placeholder-text);
        border-bottom: solid black 1px;
    }
    .underline {
       text-decoration: underline;

    }
    .underline:hover {
        color: var( --hover-tag-dark-red);
        cursor: pointer;
    }

</style>